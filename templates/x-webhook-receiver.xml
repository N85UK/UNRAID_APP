<?xml version="1.0"?>
<Container version="2">
  <Name>X-Webhook-Receiver</Name>
  <Repository>ghcr.io/n85uk/x-webhook-receiver:latest</Repository>
  <Registry>https://ghcr.io/n85uk/x-webhook-receiver:latest</Registry>
  <Network>bridge</Network>
  <MyIP/>
  <Shell>bash</Shell>
  <Privileged>false</Privileged>
  <Support>https://forums.unraid.net/topic/XXXXX-support-x-webhook-receiver/</Support>
  <Project>https://github.com/N85UK/UNRAID_APP</Project>
  <Overview>Production-ready webhook receiver and processor with UniFi Protect and UCG Max integration. Features universal webhook endpoint with HMAC verification, UniFi event transformation, SQLite alert history with automatic retention, advanced JSONPath mapping, and real-time WebSocket notifications with a modern React dashboard.</Overview>
  <Category>Network:Other Tools: Status:Stable</Category>
  <WebUI>http://[IP]:[PORT:3000]</WebUI>
  <TemplateURL>https://raw.githubusercontent.com/N85UK/UNRAID_APP/main/templates/x-webhook-receiver.xml</TemplateURL>
  <Icon>https://raw.githubusercontent.com/N85UK/UNRAID_APP/main/icons/x-webhook-receiver.png</Icon>
  <ExtraParams/>
  <PostArgs/>
  <CPUset/>
  <DateInstalled/>
  <DonateText>If you find this application useful, consider supporting development.</DonateText>
  <DonateLink/>
  <Requires>
**PostgreSQL Database** (included in docker-compose setup)

For manual installation, ensure PostgreSQL is available and DATABASE_URL is configured.
  </Requires>
  <Config Name="WebUI Port" Target="3000" Default="3000" Mode="tcp" Description="Web interface port" Type="Port" Display="always" Required="true" Mask="false">3000</Config>
  <Config Name="API Port" Target="5000" Default="5000" Mode="tcp" Description="API server port" Type="Port" Display="always" Required="true" Mask="false">5000</Config>
  <Config Name="AppData" Target="/app/data" Default="/mnt/user/appdata/x-webhook-receiver" Mode="rw" Description="Application data directory" Type="Path" Display="advanced" Required="true" Mask="false">/mnt/user/appdata/x-webhook-receiver</Config>
  <Config Name="Database URL" Target="DATABASE_URL" Default="postgresql://webhook:webhook@postgres:5432/webhook_db" Mode="" Description="PostgreSQL connection string" Type="Variable" Display="always" Required="true" Mask="false">postgresql://webhook:webhook@postgres:5432/webhook_db</Config>
  <Config Name="Secret Key" Target="SECRET_KEY" Default="" Mode="" Description="Flask secret key for session management (generate random string)" Type="Variable" Display="always" Required="true" Mask="true"/>
  <Config Name="HMAC Secret" Target="HMAC_SECRET" Default="" Mode="" Description="HMAC verification secret for webhook security (optional)" Type="Variable" Display="advanced" Required="false" Mask="true"/>
  <Config Name="Alert Retention Days" Target="ALERT_RETENTION_DAYS" Default="90" Mode="" Description="Number of days to retain alerts (0 = keep forever)" Type="Variable" Display="advanced" Required="false" Mask="false">90</Config>
  <Config Name="PUID" Target="PUID" Default="99" Mode="" Description="User ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">99</Config>
  <Config Name="PGID" Target="PGID" Default="100" Mode="" Description="Group ID for file permissions" Type="Variable" Display="advanced" Required="false" Mask="false">100</Config>
</Container>
